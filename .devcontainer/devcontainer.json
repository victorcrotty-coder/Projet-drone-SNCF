{
  "image": "mcr.microsoft.com/devcontainers/python:3",
  "features": {
    "ghcr.io/warrenbuckley/codespace-features/sqlite:latest": {}
  },
  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md"
      ]
    },
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
      },
      "extensions": [
        "github.copilot",
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },
  "forwardPorts": [
    8000
  ]
}